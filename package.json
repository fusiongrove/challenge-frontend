{
    "name": "challenge-frontend",
    "version": "1.0.0",
    "description": "This challenge is designed to test your familiarity with ReactJS, RESTful APIs, ES5, ES6 and overall coding standards and good practices. You will be required to create a single page application on ReactJS to manage a user profile.",
    "main": "index.js",
    "scripts": {
        "start": "webpack-dev-server --hot --config ./webpack/webpack.config.js",
        "build:dev": "rimraf dist && cross-env NODE_ENV=dev webpack --colors --display-error-details --config ./webpack/webpack.config.js",
        "server:dev": "cross-env NODE_ENV=dev nodemon --exec npm run nodeserver --ignore src/",
        "nodeserver": "babel-node server",
        "test:routes": "cross-env NODE_ENV=dev mocha -t 10000 server/tests --require babel-register --require babel-polyfill"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dilumdarshana/challenge-frontend.git"
    },
    "author": "Dilum Darshana",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/dilumdarshana/challenge-frontend/issues"
    },
    "homepage": "https://github.com/dilumdarshana/challenge-frontend#readme",
    "dependencies": {
        "aws-sdk": "^2.290.0",
        "axios": "^0.18.0",
        "babel": "^6.23.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.5",
        "babel-polyfill": "^6.26.0",
        "babel-preset-react": "^6.24.1",
        "body-parser": "^1.18.3",
        "bootstrap": "^4.1.3",
        "config": "^2.0.1",
        "connected-react-router": "^4.3.0",
        "cors": "^2.8.4",
        "cross-env": "^5.2.0",
        "express": "^4.16.3",
        "history": "^4.7.2",
        "moment": "^2.22.2",
        "mongoose": "^5.2.7",
        "morgan": "^1.9.0",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "react-images-upload": "^1.2.0",
        "react-modal": "^3.5.1",
        "react-redux": "^5.0.7",
        "redux": "^4.0.0",
        "redux-saga": "^0.16.0",
        "reselect": "^3.0.1"
    },
